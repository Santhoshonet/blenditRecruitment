<table border="0" cellpadding="0" cellspacing="0" width="98%">
    <tbody>
    <tr>
      <td style="padding: 10px 15px 40px; font-family: Helvetica,Arial,sans-serif; font-size: 16px; line-height: 1.3em; text-align: left;" valign="top">
        <h1 style="font-family: Helvetica,Arial,sans-serif; color: rgb(34, 34, 34); font-size: 28px; line-height: normal; letter-spacing: -1px;">
          A new profile has been added for Designer.
        </h1>
        <p>
          <b>Username :</b> <%= @user.name %> <br>
        </p>
        <p>
          <b>Email :</b> <%= @user.email %> <br>
        </p>
        <p>
          <b>Phone No :</b> <%= @user.mobile %> <br>
        </p>
        <p>
          <b>Portfolios :</b> <%= @user.portpolios %> <br>
        </p>
        <% unless @user.attachment_id.nil? %>
            <p>
              <b>Download Attachment from :</b> http://careers.blendit.com.my/attachment/<%= @user.attachment_id %> <br>
            </p>
        <% end %>
        <p>
          <b>Inspiration URL 1 :</b> <%= @user.inspirationurl1 %> <br>
        </p>
        <p>
          <b>Inspiration URL 2 :</b> <%= @user.inspirationurl2 %> <br>
        </p>
        <p>
          <b>Inspiration URL 3 :</b> <%= @user.inspirationurl3 %> <br>
        </p>
        <p>
          <b>Comment in Inspiration Links :</b> <%= @user.inspirationcomment %> <br>
        </p>
        <p>
          <b>Javascript :</b> <%= @user.javascript %> <br>
        </p>
      </td>
    </tr>
    </tbody>
  </table>